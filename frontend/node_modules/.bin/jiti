#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/c/Dev/pto-connect/frontend/node_modules/jiti/bin/node_modules:/mnt/c/Dev/pto-connect/frontend/node_modules/jiti/node_modules:/mnt/c/Dev/pto-connect/frontend/node_modules:/mnt/c/Dev/pto-connect/node_modules:/mnt/c/Dev/node_modules:/mnt/c/node_modules:/mnt/c/Dev/pto-connect/frontend/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/c/Dev/pto-connect/frontend/node_modules/jiti/bin/node_modules:/mnt/c/Dev/pto-connect/frontend/node_modules/jiti/node_modules:/mnt/c/Dev/pto-connect/frontend/node_modules:/mnt/c/Dev/pto-connect/node_modules:/mnt/c/Dev/node_modules:/mnt/c/node_modules:/mnt/c/Dev/pto-connect/frontend/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../jiti/bin/jiti.js" "$@"
else
  exec node  "$basedir/../jiti/bin/jiti.js" "$@"
fi
